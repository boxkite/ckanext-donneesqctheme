{
    "scheming_version": 1,
    "dataset_type": "dataset",
    "about": "A reimplementation of the default CKAN dataset schema",
    "about_url": "http://github.com/open-data/ckanext-scheming",
    "dataset_fields": [
        {
            "field_name": "title",
            "label": "Title",
            "preset": "title",
            "form_placeholder": "eg. A descriptive title",
            "form_attrs": {
                "data-module": "slug-preview-target-title"
            }
        },
        {
            "field_name": "name",
            "label": "URL",
            "preset": "dataset_slug",
            "form_placeholder": "eg. my-dataset",
            "form_snippet": "slug_qc.html"
        },
        {
            "field_name": "notes",
            "label": "Description",
            "form_snippet": "markdown.html",
            "form_placeholder": "eg. Some useful notes about the data"
        },
        {
            "field_name": "tag_string",
            "label": "Tags",
            "preset": "tag_string_autocomplete",
            "form_placeholder": "eg. economy, mental health, government"
        },
        {
            "field_name": "license_id",
            "label": "License",
            "form_snippet": "license.html"
        },
        {
            "field_name": "owner_org",
            "label": "Organization",
            "preset": "dataset_organization",
            "validators": "not_empty owner_org_validator unicode",
            "form_snippet": "organization_qc.html"
        },
        {
            "field_name": "url",
            "label": "Source",
            "form_placeholder": "http://example.com/dataset.json",
            "display_property": "foaf:homepage",
            "display_snippet": "link.html"
        },
        {
            "field_name": "update_frequency",
            "label": "Frequence de mise a jour",
            "form_snippet": "update_frequency_qc.html"
        },
        {
            "field_name": "language",
            "label": "Langue",
            "form_snippet": "language_qc.html"
        },        
        {
            "field_name": "time_coverage_start",
            "label": "Debut de la periode couverte",
            "form_placeholder": "AAAA-MM-JJ",
            "display_snippet": "date.html"
        }, 
        {
            "field_name": "time_coverage_end",
            "label": "Fin de la periode couverte",
            "form_placeholder": "AAAA-MM-JJ",
            "display_snippet": "date.html"
        },    
        {
            "field_name": "spatial",
            "label": "Couverture geographique",
            "form_snippet": "textarea.html",
            "form_placeholder": "{\"type\":\"Polygon\",\"coordinates\": [[[-74.0161991426,40.701958285],[-74.0161991426,40.872723176],[-73.9177509299,40.872723176],[-73.9177509299,40.701958285],[-74.0161991426,40.701958285]]]}"
        },                    
        {
            "field_name": "author",
            "label": "Personne contact",
            "form_placeholder": "Nom du contact",
            "display_property": "dc:creator"
        },
        {
            "field_name": "author_email",
            "label": "Courriel du contact",
            "form_placeholder": "nom@example.com",
            "display_property": "dc:creator",
            "display_snippet": "email.html",
            "display_email_name_field": "author"
        }
    ],
    "resource_fields": [
        {
            "field_name": "url",
            "label": "URL",
            "preset": "resource_url_upload"
        },
        {
            "field_name": "name",
            "label": "Name",
            "form_placeholder": "eg. January 2011 Gold Prices"
        },
        {
            "field_name": "description",
            "label": "Description",
            "form_snippet": "markdown.html",
            "form_placeholder": "Some useful notes about the data"
        },
        {
            "field_name": "format",
            "label": "Format",
            "preset": "resource_format_autocomplete"
        }
    ]
}